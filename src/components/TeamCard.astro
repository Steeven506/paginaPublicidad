---
type RedesSociales = {
  linkedin?: string;
  twitter?: string;
  instagram?: string;
  behance?: string;
  dribbble?: string;
  [key: string]: string | undefined;
};

export interface Props {
  miembro: {
    nombre: string;
    puesto: string;
    descripcion: string;
    imagen: string;
    redes: RedesSociales;
  };
}

const { miembro } = Astro.props;
---

<div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition team-member">
  <img 
    src={miembro.imagen} 
    alt={miembro.nombre} 
    class="w-full h-64 object-cover"
  />
  <div class="p-6">
    <h3 class="text-xl font-bold">{miembro.nombre}</h3>
    <p class="text-blue-600 mb-3">{miembro.puesto}</p>
    <p class="text-gray-600 mb-4">{miembro.descripcion}</p>
    
    <div class="flex space-x-4">
      {Object.entries(miembro.redes).map(([red, url]) => url ? (
        <a 
          href={url} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-gray-500 hover:text-blue-600 transition"
          aria-label={red}
        >
          <i class={`fab fa-${red} text-lg`}></i>
        </a>
      ) : null)}
    </div>
  </div>
</div>