<div 
  x-data="{ 
    open: false,
    formData: { email: '', password: '' },
    error: '',
    close() { this.open = false },
    submitForm() {
      this.error = '';
      
      if (!this.formData.email) {
        this.error = 'El email es requerido';
        return;
      }
      
      if (!/^\S+@\S+\.\S+$/.test(this.formData.email)) {
        this.error = 'Ingresa un email válido';
        return;
      }
      
      if (!this.formData.password) {
        this.error = 'La contraseña es requerida';
        return;
      }
      
      // Aquí iría la llamada a tu API
      console.log('Login attempt:', this.formData);
      this.close();
    }
  }"
  x-show="open"
  @open-login.window="open = true"
  @keydown.escape.window="close"
  class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black bg-opacity-50"
  x-cloak
>
  <div 
    class="w-full max-w-md bg-white rounded-lg shadow-xl"
    @click.outside="close"
  >
    <div class="p-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Iniciar Sesión</h2>
        <button @click="close" class="text-gray-500 hover:text-gray-700">
          &times;
        </button>
      </div>
      
      <div x-show="error" class="mb-4 p-3 bg-red-50 text-red-600 rounded">
        <span x-text="error"></span>
      </div>
      
      <form @submit.prevent="submitForm" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input
            type="email"
            x-model="formData.email"
            class="w-full px-3 py-2 border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500"
            placeholder="tu@email.com"
          />
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
          <input
            type="password"
            x-model="formData.password"
            class="w-full px-3 py-2 border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500"
            placeholder="••••••••"
          />
        </div>
        
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <input id="remember" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500">
            <label for="remember" class="ml-2 text-sm text-gray-700">Recordarme</label>
          </div>
          <a href="#" class="text-sm text-blue-600 hover:underline">¿Olvidaste tu contraseña?</a>
        </div>
        
        <button
          type="submit"
          class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded"
        >
          Ingresar
        </button>
      </form>
      
      <div class="mt-4 text-center text-sm">
        <span class="text-gray-600">¿No tienes cuenta? </span>
        <a href="#" class="text-blue-600 hover:underline font-medium">Regístrate</a>
      </div>
    </div>
  </div>
</div>